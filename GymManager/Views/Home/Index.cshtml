@{
    ViewBag.Title = "Home Page";
}

<div id="carouselExampleIndicators" class="carousel slide fixed-top" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner">
        <!-- Slide 1 -->
        <div class="carousel-item active" style="background-image: url(/Content/img/login-cover.jpg);">
            <div class="carousel-caption text-center">
                <h1>Welcome to Gym Manager</h1>
                <h3>A new way to manage your fitness club</h3>
                <a class="btn btn-outline-light btn-lg carousel-button" href="/Account/Login">Get Started</a>
            </div>
        </div>
        <!-- Slide 2 -->
        <div class="carousel-item" style="background-image: url(/Content/img/carousel-slide-3.jpg);">
            <div class="carousel-caption text-center">
                <h1>Manage Equipment</h1>
                <h3>Take care of your equipment with the malfunction reporting system</h3>
                <a class="btn btn-outline-light btn-lg carousel-button" href="/Account/Login">Get Started</a>
            </div>
        </div>
        <!-- Slide 3 -->
        <div class="carousel-item" style="background-image: url(/Content/img/carousel-slide-2.jpg);">
            <div class="carousel-caption text-center">
                <h1>Control supplements</h1>
                <h3>Control the availability of supplements</h3>
                <a class="btn btn-outline-dark btn-lg carousel-button" href="/Account/Login">Get Started</a>
            </div>
        </div>
        <!-- Slide 4 -->
        <div class="carousel-item" style="background-image: url(/Content/img/carousel-slide-4.jpg);">
            <div class="carousel-caption text-center">
                <h1>Employees Management</h1>
                <h3>Edit or delete gym staff accounts</h3>
                <a class="btn btn-outline-light btn-lg carousel-button" href="/Account/Login">Get Started</a>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>