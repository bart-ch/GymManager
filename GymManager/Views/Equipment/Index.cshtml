
@{
    ViewBag.Title = "Index";
}

<h2>Equipment</h2>

<a href="/Equipment/New" class="btn btn-primary my-3" role="button">New Equipment</a>

<table id="equipment" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Brand</th>
            <th>Model</th>
            <th>Purchase Date</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {

            $("#equipment").DataTable({
                ajax: {
                    url: "/api/equipment",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "brand"
                    },
                    {
                        data: "model"
                    },                  
                    {
                        data: "purchaseDate",
                        render: function (data) {
                            var date = new Date(data);
                            var day = date.getDate();
                            var month = date.getMonth() + 1;
                            var year = date.getFullYear();

                            return day + "/" + month + "/" + year;
                        }
                    }

                ]

            });
        })
    </script>
    
    
    
    
}