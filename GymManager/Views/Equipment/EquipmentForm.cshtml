@model GymManager.Models.Area
@{
    ViewBag.Title = "Equipment Form";
}

<h2>Equipment Form</h2>

<form>


    <div class="form-group">
        <label for="type">Type of Equipment</label>
        <input class="form-control" id="type" name="type">
    </div>

    <div class="form-group">
        <label for="brand">Brand</label>
        <input class="form-control" id="brand" name="brand">
    </div>

    <div class="form-group">
        <label for="model">Model</label>
        <input class="form-control" id="model" name="model">
    </div>

    <div class="input-group mt-3">
        <div class="input-group-prepend">
            <label class="input-group-text"><i class="fa fa-map-marker"></i></label>
        </div>
        <select class="form-control" id="areaDropdown" name="areaDropdown"></select>
    </div>


    <div class="input-group mt-3">
        <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-calendar"></i> </span>
        </div>
        <input id="purchaseDate" type="date" class="form-control" name="purchaseDate" required>
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(document).ready(function () {
            $.ajax({
                type: "GET",
                url: "/api/areas",
                data: "{}",
                success: function (data) {
                    var dropdownItems = '<option disabled selected value="">-- Select Gym Area --</option>';
                    for (var i = 0; i < data.length; i++) {
                        dropdownItems += '<option style="cursor: pointer;" class="dropdown-item" value="' + data[i].id + '">' + data[i].name + '</option>';
                    }
                    $("#areaDropdown").html(dropdownItems);
                }
            });
        });
    </script>
}