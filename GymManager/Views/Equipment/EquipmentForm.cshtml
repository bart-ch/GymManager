
@{
    ViewBag.Title = "Equipment Form";
}

<h2>Equipment Form</h2>

<form>
    <div class="form-group">
        <label for="type">Type of Equipment</label>
        <input class="form-control" id="type" name="type">
    </div>

    <div class="form-group">
        <label for="brand">Brand</label>
        <input class="form-control" id="brand" name="brand">
    </div>

    <div class="form-group">
        <label for="model">Model</label>
        <input class="form-control" id="model" name="model">
    </div>

    <div class="input-group mt-3">
        <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-calendar"></i> </span>
        </div>
        <input id="purchaseDate" type="date" class="form-control" name="incomeDate" required>
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>
</form>

