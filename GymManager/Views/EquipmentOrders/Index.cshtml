
@{
    ViewBag.Title = "Equipment Orders";
}

<h2>@ViewBag.Title</h2>

<div class="table-responsive">
    <table id="equipment" class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>Orderer</th>
                <th>Brand</th>
                <th>Model</th>
                <th>Type</th>
                <th>Desired Delivery Date</th>
                <th>Status</th>
                <th width="3%"></th>
                <th width="3%"></th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

@section scripts {
    @Scripts.Render("~/scripts/GymManager/gm-pupulate-select-with-ajax-get.js")
    <script>
        $(document).ready(function () {

            var table = $("#equipment").DataTable({
                ajax: {
                    url: "/api/equipmentOrders",
                    dataSrc: ""
                },
                "order": [[4, "desc"]],
                columns: [
                    {
                        data: "userId"
                    },
                    {
                        data: "brand"
                    },
                    {
                        data: "model"
                    },
                    {
                        data: "type.name"
                    },
                    {
                        data: "desiredDeliveryDate",
                        render: function (data) {
                            var date = new Date(data);
                            var dateString = date.getFullYear() + '/'
                                + ('0' + (date.getMonth() + 1)).slice(-2) + '/'
                                + ('0' + date.getDate()).slice(-2);

                            return dateString;
                        }
                    },
                    {
                        "orderable": false,
                        render: function (data, type, full, meta) {
                            return "<form class='orderStatusForm'>"
                                + "<div class='form-group'>"
                                + "<select class='form-control'>"
                                + "<option value='' selected disabled hidden>" + full.orderStatus.name + "</option>"
                                + "<option class='pointer' value='1'>In process</option>"
                                + "<option class='pointer' value='2'>Shipped</option>"
                                + "<option class='pointer' value='3'>Completed</option>"
                                + "</select > "
                                + "</div>"
                                + "<input type = 'hidden' name = 'id' value = '" + full.id + "'>"
                                + "<button type='button' class='btn btn-primary js-change'>Change</button ></form > ";
                        }
                    },
                    {
                        data: "id",
                        "orderable": false,
                        render: function (data) {
                            return "<a href ='/Equipment/Edit/" + data + "' class='pointer'><i class='fa fa-edit' title='Edit'></i></a>";
                        }
                    },
                    {
                        data: "id",
                        "orderable": false,
                        render: function (data) {
                            return "<a class='pointer js-delete' data-equipment-id=" + data + "><i class='fa fa-trash' title='Delete'></i></a>";
                        }
                    }
                ]
            });

         



        })

    </script>
}


