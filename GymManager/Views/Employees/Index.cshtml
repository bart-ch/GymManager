
@{
    ViewBag.Title = "Employees";
}

<h2>@ViewBag.Title</h2>
<h3>List of all registered employees.</h3>
<h5>Click on an employee to see more details.</h5>

<div class="table-responsive">
    <table id="employees" class="table table-bordered table-hover pointer">
        <thead>
            <tr>
                <th>Name and surname</th>
                <th>Email</th>
                <th>Job Title</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

@section scripts
{
    @Scripts.Render("~/Scripts/GymManager/gm-handle-employee-datatable.js")
}
